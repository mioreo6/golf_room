<div class="container pt-3">
  <div class="row">
    <div class="col-10 mx-auto">
      <table class="table">
        <thead>
          <tr>
            <th class="text-center">会員一覧</th>
          </tr>
        </thead>
        <% @customers.each do |customer| %>
        <tbody>
          <td><%= customer.id %></td>
          <td><%= customer.created_at.strftime('%Y/%m/%d %H:%M') %></td>
          <td><%= link_to admin_customer_path(customer.id) do %><%= customer.name %><% end %></td>
          <td>
           <% if customer.is_deleted == false %><span class="text-success font-weight-bold">有効</span>
           <% else %><span class="text-secondary font-weight-bold">退会</span>
           <% end %>
          </td>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
<div class="col-1 mx-auto">
<%= paginate @customers %>
</div>