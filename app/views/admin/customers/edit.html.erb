<div class="container pt-3">
  <div class="row mx-auto">
    <div class="col-9 text-center">
      <div class="mx-auto">
        <%= form_with model: @customer, url: admin_customer_path, method: :patch, local: true do |f| %>

         <div>
         <label class="col-3">プロフィール画像</label>
         <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></br>
         </div>

         <div>
         <label class="col-3">自己紹介</label>
         <%= f.text_area :introduction %></br>
         </div>

         <div>
         <label class="col-3">ユーザー名</label>
         <%= f.text_field :name %></br>
         </div>
         <div>
         <label class="col-3">メールアドレス</label>
         <%= f.text_field :email %></br>
         </div>

         <div>
         <label class="col-3">会員ステータス</label>
       　<%= f.radio_button :is_deleted, :false %>
         <%= f.label :is_deleted, "有効" %>
         <%= f.radio_button :is_deleted, :true %>
         <%= f.label :is_deleted, "退会" %></br>
         </div>

         <div>
         <label class="col-3"></label>
         <%= f.submit '変更を保存', class:"btn btn-success px-5" %>
         </div>

        <% end %>
      </div>
    </div>
  </div>
</div>