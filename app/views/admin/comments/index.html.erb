<div class="container pt-3">
  <div class="row">
    <div class="col-10 mx-auto">
      <table class="table">
        <thead >
          <tr>
            <th class="text-center">コメント一覧(<%= @comments.comments.count %>)</th>
          </tr>
        </thead>
        <% @comments.each do |comment| %>
        <tbody>
          <tr>
            <td><%= comment.created_at.strftime('%Y/%m/%d %H:%M') %></td>
             <td><%= link_to admin_post_comment(post.id)(@comment)><%= comment.comment %></td>
            <td><%= comment.customer.name %></td>
          </tr>
        </tbody>
        <% end %>
        </table>
  </div>
</div>
</div>
