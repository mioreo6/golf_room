<div class="container pt-3">
  <div class="row">
    <div class="col-10 mx-auto">
      <table class="table">
        <thead >
          <tr>
            <th class="text-center">コメント一覧(<%= @post.comments.count %>)</th>
          </tr>
        </thead>
        </table>


        <table class="table">
        <% @post.comments.each do |comment| %>
        <tbody>
          <tr>
            <td class="col-3"><%= comment.created_at.strftime('%Y/%m/%d %H:%M') %></td>
            <td class="col-6"><%= link_to admin_post_comment_path(@post,comment.id) do %><%= comment.comment %><% end %></td>
            <td class="col-3"><%= comment.customer.name %></td>
          </tr>
        </tbody>
        <% end %>
        </table>
  </div>
</div>
</div>
