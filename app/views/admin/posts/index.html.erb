<div class="container pt-3">
  <div class="row">
    <div class="col-10 mx-auto">
      <table class="table">
        <thead >
          <tr>
            <th class="text-center">投稿一覧</th>
          </tr>
        </thead>
        <% @posts.each do |post| %>
        <tbody>
          <td><%= post.created_at.strftime('%Y/%m/%d %H:%M') %></td>
          <td><%= link_to admin_post_path(post) do %><%= post.body %><% end %></td>
          <td><%= post.customer.id %></td>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
<div class="col-1 mx-auto">
<%= paginate @posts %>
</div>