<div class="container pt-3">
  <div class="row">
    <div class="col-10 mx-auto">
        <span>投稿詳細</span></br>
        <%= @post.body %></br>
          <% @post.tags.each do |tag| %>
           <span>#<%= tag.tag_name %></span>
          <% end %></br>
        <%= @post.customer.name %></br>
         <p>
           <%= link_to admin_post_comments_path(@post) do %>コメント(<%= @post.comments.count %>)<% end %>,いいね(<%= @post.favorites.count %>)</p>
         <%= link_to '削除する', admin_post_path(@post), method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-success mr-5" %>
    </div>
  </div>
</div>