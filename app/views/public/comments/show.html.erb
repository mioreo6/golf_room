<div class="container pt-3">
  <div class="row">
    <div class="col-10 mx-auto text-center">
        <span>コメント詳細</span></br>
        <div class="col-6 border border-dark text-center pt-3 mt-3 mb-3 mx-auto">
        <p><%= @comment.comment %></p>
        <p class="border-top">name:<%= link_to customer_path(@comment.customer.id) do %><%= @comment.customer.name %><% end %></p>
        </div>
         <% if @comment.customer == current_customer %>
         <%= link_to '削除する', post_comment_path(@comment.post.id,@comment.id), method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-success" %>
          <% end %>
    </div>
  </div>
</div>
