<div class="container pt-3">
<div class="row text-center">
<div class="col-10 mx-auto">
  <%= form_with model: @post, url: posts_new_path, method: :post, local: true do |f| %>
  <div class="col-5 mx-auto">
    新規投稿</br>
  </div>
  <div>
    <%= f.text_area :body, placeholder: "思ったことを書こう！", class:"col-6" %>
    </div></br>
       <div class='form-group'>
        <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :tag_name) do |tag| %>
            <div class='form-check'>
                <%= tag.label class: 'form-check-label' do %>
                    <%= tag.check_box class: 'form-check-input' %>
                    <%= tag.text %>
                <% end %>
            </div>
        <% end %>
    </div>
    <%= f.submit '投稿する', class:"btn btn-success px-5 col-2"%>
<% end %>
</div>
</div>
</div>