<div class="container pt-3">
<div class="row text-center">
  <div class="col-6 mx-auto">
  <%= form_with model: @post, url: post_path(@post), method: :patch, local: true do |f| %>
  <%= f.text_area :body %></br>
         <div class='form-group'>
        <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :tag_name) do |tag| %>
            <div class='form-check'>
                <%= tag.label class: 'form-check-label' do %>
                    <%= tag.check_box class: 'form-check-input' %>
                    <%= tag.text %>
                <% end %>
            </div>
        <% end %>
    </div>
  <% if @post.is_draft == true %>
  <%= f.submit '投稿する', :name => 'body', class:"btn btn-success px-5" %>
  <%= f.submit '下書きに保存', :name => 'update_draft', class:"mr-5 btn btn-sm btn-outline-secondary" %>
  <% else %>
   <%= f.submit "変更を保存", :name => 'update_post', class:"btn btn-success px-5" %>
  <% end %>
  <% end %>
</div>
</div>
</div>